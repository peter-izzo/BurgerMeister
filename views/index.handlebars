<main>
    <div class="container">

        <h1>Eat-Da-Burger!</h1>
            <img src="assets/images/juicy_burger.png" class="responsive-image" alt="juicy burger">
        <div class="flex-row" id="newBurger">
            <button type="button" id="addBurgerBtn" class="button" data-toggle="modal" data-target="#newBurgerModal">
                Add Burger
            </button>
        </div>

        <div class="flex-row">

            <div class="flex-small one-third">
                <h2 class="noteaten">These burgers haven't been DEVOURED!!!</h2>

                <div>
                    {{#each burgers}}
                    {{#unless eaten}}
                    {{> burger-partial/burger eaten=true}}
                    {{/unless}}
                    {{/each}}
                </div>
                
            </div>

            <div class="flex-small one-third">
                <img src="assets/images/homer.png" class="responsive-image" alt="homer simpson">
            </div>

            <div class="flex-small one-third">
                <h2 class="eaten">These burgers have been DEVOURED!</h2>

                <div>
                    {{#each burgers}}
                    {{#if eaten}}
                    {{> burger-partial/burger eaten=false}}
                    {{/if}}
                    {{/each}}
                </div>

            </div>

        </div>

        <div class="modal fade" id="newBurgerModal" tabindex="-1" role="dialog">

            <div class="modal-dialog modal-dialog-centered" role="document">

                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Add A New Burger</h5>
                        <button type="button" class="button close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <form id="create-form">
                            <div class="form-group">
                                <label for="bu">Burger Name:</label>
                                <input type="text" id="bu" name="name">
                            </div>

                            <div class="form-group">
                                <label for="eaten">Has this burger been devoured??</label>
                                <input type="radio" name="eaten" value="1" id="eaten" checked> DEVOURED!!<br>
                                <input type="radio" name="eaten" value="0" id="noteaten"> Not devoured
                            </div>
                            
                            <div class="modal-footer">
                                <button type="submit" class="button">Add</button>
                                <button type="button" class="button" data-dismiss="modal">Close</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</main>